<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="text_travel_tab">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingBottom">@dimen/btn_padding_default_y</item>
    </style>

    <style name="activityTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loadingActivityTheme" parent="activityTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="title_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleLayoutHeight</item>
        <item name="android:background">@color/titleBg</item>
    </style>
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="@dimen/settingItemHeight" -->
    <!-- android:layout_marginTop="16dp" -->
    <!-- android:background="@color/contentBg" -->
    <!-- android:gravity="center_vertical" -->
    <!-- android:orientation="horizontal" -->
    <!-- android:paddingLeft="16dp" -->
    <!-- android:paddingRight="16dp" -->
    <style name="activity_vehicleinfo_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/contentBg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal_largest</item>
        <item name="android:paddingRight">@dimen/margin_horizontal_largest</item>
    </style>

    <style name="activity_vehicleinfo_lable_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="listPopupWindowStyle" parent="AppBaseTheme">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="dlg_refresh_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 登陆、注册-->
    <style name="form_text_input_layout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/layout_y_5</item>
    </style>
    <style name="btn_send_code">
        <item name="android:background">@drawable/btn_round_blue</item>
        <item name="android:textSize">@dimen/text_size_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/layout_y_40</item>
    </style>
    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_y_50</item>
        <item name="android:background">@drawable/btn_round_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressPlay" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_progress</item>
    </style>

    <style name="BaseDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>