<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/layout_y_60"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginLeft="@dimen/layout_x_10"
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/layout_x_50"
        android:layout_height="@dimen/layout_x_50"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_company"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_logo"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_toRightOf="@id/iv_logo"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textDarkGray"
            android:textSize="@dimen/font_size_normal"
            tools:text="公司名称"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/font_size_smaller"
            tools:text="基站数据"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/layout_x_20"
        android:layout_height="@dimen/layout_x_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_x_10"
        android:src="@drawable/ico_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_1"
        android:layout_alignParentBottom="true"
        android:background="@color/grayLine"/>
</RelativeLayout>