<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_y_66"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/layout_x_50"
        android:layout_height="@dimen/layout_x_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:src="@drawable/ico_device"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/textDarkGray"
            android:textSize="@dimen/font_size_normal"
            tools:text="公司名称"/>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/textGray"
            android:textSize="@dimen/font_size_smaller"
            tools:text="111111"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/layout_x_20"
        android:layout_height="@dimen/layout_x_20"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/layout_x_10"
        android:src="@drawable/ico_arrow_right"/>
</LinearLayout>