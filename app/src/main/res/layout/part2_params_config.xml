<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_horizontal_8"
    android:background="@drawable/shape_readcard_msg_item"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="温度"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_temperature"
            android:text="6.66"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="电量"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_battery"
            android:text="20.15"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="IMEI号"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_imeiNum"
            android:text="86612562548"
            android:textSize="@dimen/font_size_small"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="IMSI"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_imsiNum"
            android:layout_gravity="center_vertical"
            android:text="12586612562548"
            android:textSize="@dimen/font_size_small"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="msisdn"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_msisdnNum"
            android:text="256552331223"
            android:textSize="@dimen/font_size_small"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_30"
        android:orientation="horizontal">
        <TextView
            android:text="sms版本"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bs_smsVersion"
            android:text="0.0.00"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>