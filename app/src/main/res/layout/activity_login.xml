<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/layout_y_50">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/layout_x_200"
            android:layout_height="@dimen/layout_x_200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:layout_centerHorizontal="true"
            android:text="@string/logoinfo"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small"/>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_horizontal_largest"
            android:layout_marginRight="@dimen/margin_horizontal_largest"
            android:layout_marginTop="@dimen/layout_y_50"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/name"
                android:layout_width="@dimen/layout_x_30"
                android:layout_height="@dimen/layout_x_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/name"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/name"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/prompt_userName"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_1"
            android:layout_below="@id/rl_name"
            android:layout_marginLeft="@dimen/margin_horizontal_largest"
            android:layout_marginRight="@dimen/margin_horizontal_largest"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/ll_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_horizontal_largest"
            android:layout_marginRight="@dimen/margin_horizontal_largest"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="@dimen/layout_x_30"
                android:layout_height="@dimen/layout_x_30"
                android:layout_marginLeft="8dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_1"
            android:layout_below="@id/ll_pw"
            android:layout_marginLeft="@dimen/margin_horizontal_largest"
            android:layout_marginRight="@dimen/margin_horizontal_largest"
            android:background="@color/white"/>

        <Button

            android:id="@+id/btn_login"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/ll_pw"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/layout_y_50"
            android:background="@drawable/button_shape"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/action_sign_in_register"

            android:textColor="@color/textHoloBlue"
            android:textSize="@dimen/text_size_bigger"/>
    </RelativeLayout>


</RelativeLayout>