<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/mainline"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.foxconn.rfid.theowner.view.widgets.Header
        android:layout_width="match_parent"
        app:headerTitle="设置"
        android:id="@+id/header"
        app:rightIconVisible="gone"
        app:leftIcon="@drawable/ico_arrow_left"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin_vertical_10"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/split_vertical_normal">
    </ListView>

</LinearLayout>