<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bg_gray"
    android:orientation="vertical">
    <com.foxconn.rfid.theowner.view.widgets.Header
        android:id="@+id/abnormal_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/back"
        app:rightIconVisible="gone"/>


    <ListView
        android:id="@+id/lv_abnormal_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vertical_8"
        android:divider="#00000000"
        android:dividerHeight="0dp"/>

</LinearLayout>