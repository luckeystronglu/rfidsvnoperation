<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_height_46"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="@dimen/layout_x_14"
            android:text="基站ID"
            android:textSize="@dimen/font_size_small"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:paddingRight="@dimen/btn_margin_horizontal_16"
            android:text="基站名称"
            android:textSize="@dimen/font_size_small"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingRight="@dimen/layout_x_8"
            android:text="底层单位"
            android:textSize="@dimen/font_size_small"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_vertical_8"
        android:background="@color/me_bg_gray"/>


</LinearLayout>