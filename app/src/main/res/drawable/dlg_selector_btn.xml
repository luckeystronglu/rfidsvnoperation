<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="2dip" />
            <gradient
             	android:startColor="#0095EF"
        		android:centerColor="#0095EF"
        		android:endColor="#0095EF"  
        		android:angle="270" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
	        <corners android:radius="2dip" />
	        <gradient
             	android:startColor="#2319DC"  
        		android:centerColor="#2319DC"
        		android:endColor="#2319DC"  
        		android:angle="270" />
        </shape>
    </item>

</selector>